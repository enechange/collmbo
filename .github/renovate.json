{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "registryAliases": {
    "dhi.io": "dhi.io"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^\\.github/workflows/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "go install (?<depName>.*?)@(?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "description": "Force dhi.io images to use the correct registry URL to prevent Docker Hub fallback",
      "matchPackageNames": [
        "dhi.io/**"
      ],
      "matchDatasources": [
        "docker"
      ],
      "registryUrls": [
        "https://dhi.io"
      ]
    },
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "hostRules": [
    {
      "matchHost": "dhi.io",
      "hostType": "docker",
      "username": "{{ secrets.MEND_DHI_USERNAME }}",
      "password": "{{ secrets.MEND_DHI_PASSWORD }}"
    }
  ]
}
