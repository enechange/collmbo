{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am"]
  },
  "packageRules": [
    {
      "description": "Force dhi.io images to use the correct registry URL",
      "matchPackageNames": [
        "dhi.io/**"
      ],
      "matchDatasources": [
        "docker"
      ],
      "registryUrls": [
        "https://dhi.io"
      ]
    },
    {
      "description": "Automerge minor, patch, and lockFileMaintenance updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "automerge": true
    }
  ]
}