{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "go install (?<depName>.*?)@(?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
